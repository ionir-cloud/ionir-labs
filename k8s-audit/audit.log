### - Add following to /root/audit/audit.log on master
apiVersion: audit.k8s.io/v1 # This is required.
kind: Policy
# Don't generate audit events for all requests in RequestReceived stage.
rules:
  # Log endpoint changes at RequestResponse level
  - level: RequestResponse
    verbs: ["create", "delete"]
    resources:
    - group: ""
      resources: ["endpoints"]
  # Log endpoints at Metadata level
  - level: Metadata
    verbs: ["create", "delete"]
    resources:
    - group: ""
      resources: ["endpoints"]