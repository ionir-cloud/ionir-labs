apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: xgboost-operator
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/ionir-cloud/ionir-labs.git
    targetRevision: main
    path: distribution/kubeflow/operators/xgboost
    kustomize:
      version: v4.0.5
  destination:
    server: https://kubernetes.default.svc
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
